<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:id="@+id/content_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		android:background="@color/green_50"
		app:layout_constraintTop_toTopOf="parent">

		<View
			android:id="@+id/_bg__start_screen"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp"
			android:background="@drawable/fading_background" />

		<RelativeLayout
			android:id="@+id/relative"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/greenwallet_1"
				android:layout_width="199dp"
				android:layout_height="400dp"
				android:layout_centerInParent="true"
				android:contentDescription="greenwallet_1"
				android:src="@drawable/greenwallet1" />

			<TextView
				android:id="@+id/company_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/greenwallet_1"
				android:layout_centerInParent="true"
				android:layout_centerHorizontal="true"
				android:singleLine="true"
				android:text="@string/company_name"
				android:textColor="@color/main_green"
				android:textSize="50dp"
				android:textStyle="bold" />
		</RelativeLayout>

	</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>